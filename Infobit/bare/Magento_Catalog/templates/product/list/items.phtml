                <?php else: ?>
                    <?php /* @escapeNotVerified */ echo($iterator++ == 1) ? '<li class="col-lg-3 col-md-3 col-sm-6 col-xs-12">' : '</li><li class="col-lg-3 col-md-3 col-sm-6 col-xs-12">' ?>
                <?php endif; ?>
                <div class="brc_product_wrap <?php /* @escapeNotVerified */ echo $available; ?>">
                    <?php /* @escapeNotVerified */ echo '<!-- ' . $image . '-->' ?>
                    <a href="<?php /* @escapeNotVerified */ echo $block->getProductUrl($_item) ?>" class="product brc_pr_img photo photo product-item-photo">
                        <?php echo $block->getImage($_item, $image)->toHtml(); ?>
                    </a>
                    <div class="brc_pr_desc product details product-item-details">
                    <div class="desc_row1 desc_row">
                    <div class="desc_left">
                    
                                    <a title="<?php echo $block->escapeHtml($_item->getName()) ?>"
                                       href="<?php /* @escapeNotVerified */ echo $block->getProductUrl($_item) ?>"
                                       class="product-item-link">
                                        <span class="pr_nm"><?php echo $block->escapeHtml($_item->getName()) ?></span>
                                    </a>
                                
                    </div>
                    <div class="desc_right">
                    
                        <div class="brc_price"><?php echo $block->getProductPrice($_item); ?></div>
						
                                        <div class="add_crt">
                                            <?php if ($_item->isSaleable()): ?>
                                                <?php if ($_item->getTypeInstance()->hasRequiredOptions($_item)): ?>
